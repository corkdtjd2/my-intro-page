<head>

  <style>
    #result {
      color: red;
      font-size: 16px;


    }
  </style>
</head>

<body>
  <input id="inputname" type="text" placeholder="이름을 입력하세요">
  <button onclick="showName()">이름 출력하기</button>
  <p id="result"></p>


  <script>
    function showName() {
      let Name = document.getElementById('inputname').value;
      document.getElementById('result').textContent = "안녕하세요 " + Name + "님!";
    }

  </script>

</body>
